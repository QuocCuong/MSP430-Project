#include <msp430.h>

int main(void)
{
	WDTCTL = WDTPW | WDTHOLD;	// stop watchdog timer
	P1DIR |= BIT0 + BIT1 + BIT2 + BIT3;

	while(1){
	    P1OUT |= BIT0 + BIT1 + BIT2 + BIT3;
	    delay_ms(100);
	    P1OUT &= ~(BIT0 + BIT1 + BIT2 + BIT3);
	    delay_ms(100);
	}

	return 0;
}


// Chuong trinh con delay
void delay_ms(int ms){
    for(int i=0; i<ms; i++){
        __delay_cycles(1000);
    }
}
